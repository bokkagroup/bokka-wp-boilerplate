<div id="{{id}}" class="section masonry-gallery">
    <section>
        <div class="container">
            {{#if items}}
                <ul class="masonry-items">
                    {{#each items}}
                        <li class="masonry-item {{#if image}}image{{/if}}{{#if video}}video{{/if}}">
                            <a class="fancybox-masonry {{#if video}}fancybox.iframe{{/if}}" rel="masonry-gallery" href="{{#if image}}{{image}}{{/if}}{{#if video}}{{embed_url}}{{/if}}" {{#if image}}title="{{caption}}"{{/if}}>
                                {{#if image}}
                                <img src="{{image}}" alt=" ">
                                <span class="icon icon-zoom-in"></span>
                                {{/if}}
                                {{#if video}}
                                <img src="{{thumbnail}}" alt=" ">
                                <span class="icon icon-play"></span>
                                {{/if}}
                            </a>
                        </li>
                    {{/each}}
                </ul>
            {{/if}}
        </div>
    </section>
</div>