<div class="section mega-features">
    <section>
        <div class="container">
            <div class="header">
                <header>
                    <h2>
                        {{features_title}}
                    </h2>
                </header>
            </div>
            <ul class="features">
                {{#each neighborhood_features}}
                    <li>
                        <div class="icon {{icon}}"></div>
                        <div class="title">{{title}}</div>
                        <div class="body">
                            {{description}}
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
    </section>
</div>