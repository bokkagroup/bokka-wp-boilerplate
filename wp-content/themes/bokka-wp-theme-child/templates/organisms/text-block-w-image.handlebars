<div id="{{id}}" class="section text-block-w-image {{#if background_color}}bg-{{background_color}}{{/if}}">
    <section>
        {{#if title}}
        <div class="container">
            <div class="title">
                <h2>{{title}}</h2>
            </div>
        </div>
        {{/if}}
        <div class="container">
            {{#if align_image_left}}
                {{> molecules/blocks/slider}}
            {{/if}}
            <div class="body">
                {{{description}}}
                {{#if button}}
                    <a href="{{link}}" class="button">
                        {{button_text}}
                    </a>
                {{/if}}
            </div><!--/container-->
            {{#if align_image_right}}
                {{> molecules/blocks/slider}}
            {{/if}}
        </div>
    </section>
</div><!--/text-block-w-image-->