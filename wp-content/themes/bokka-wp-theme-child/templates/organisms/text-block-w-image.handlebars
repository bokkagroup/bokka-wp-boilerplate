<div id="{{id}}" class="section text-block-w-image {{#if background_color}}bg-{{background_color}}{{/if}}">
    <section>
        {{#if title}}
        <div class="container">
            <div class="title">
                <h2>{{title}}</h2>
            </div>
        </div>
        {{/if}}
        <div class="container">
            {{#if align_image_left}}
            <div class="image">
                <figure>
                    <img src="{{image}}" alt="" />
                    {{#if caption}}
                    <figcaption class="caption">{{caption}}</figcaption>
                    {{/if}}
                </figure>
            </div>
            {{/if}}
            <div class="body">
                {{{description}}}
                {{#if button}}
                    <a href="{{link}}" class="button">
                        {{button_text}}
                    </a>
                {{/if}}
            </div><!--/container-->
            {{#if align_image_right}}
            <div class="image">
                <figure>
                    <img src="{{image}}" alt="" />
                    {{#if caption}}
                    <figcaption class="caption">{{caption}}</figcaption>
                    {{/if}}
                </figure>
            </div>
            {{/if}}
        </div>
    </section>
</div><!--/text-block-w-image-->