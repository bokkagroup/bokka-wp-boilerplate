<div id="{{id}}" class="section photo-grid-w-title-caption {{#if background_color}}bg-{{background_color}}{{/if}} width-medium">
    <section>
        <div class="container">
            <div class="text">
                {{#if title}}
                    <div class="section-title">
                        <h2>{{title}}</h2>
                    </div>
                {{/if}}

                {{#if description}}
                    <div class="section-body">
                        {{{description}}}
                    </div>
                {{/if}}
            </div>
        </div>

        <div class="container">
            <div class="items">
            {{#each item}}
                <div class="item">
                    <div class="image">
                        <figure>
                            {{#if button}}
                            <a href="{{link}}" target="{{link_target}}"><img src="{{image}}" alt=""></a>
                            {{else}}
                            <img src="{{image}}" alt="">
                            {{/if}}
                        </figure>
                    </div>
                    <div class="body">
                        {{#if title}}
                        <div class="title">
                            <h3>{{title}}</h3>
                        </div>
                        {{/if}}
                        <div class="subtitle">
                            <p>{{sub_title}}</p>
                            {{#if button}}
                            <a href="{{link}}" class="button" target="{{link_target}}">{{button_text}}</a>
                            {{/if}}
                        </div>
                    </div>
                </div>
            {{/each}}

            {{#if button}}
                <div class="section-button">
                    {{#if subtitle}}
                    <p>{{subtitle}}</p>
                    {{/if}}
                    {{#if button}}
                    <a href="{{link}}" class="button" target="{{link_target}}">{{button_text}}</a>
                    {{/if}}
                </div>
            {{/if}}
            </div><!--/items-->
        </div><!--/container-->
    </section>
</div><!--/photo-grid-w-title-caption-->