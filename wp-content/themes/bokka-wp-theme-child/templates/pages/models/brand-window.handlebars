<div class="section detail-brand-window model">
    <section>
        <div class="container">
            <div class="right">
                {{#if elevations}}
                    {{>molecules/blocks/elevations-gallery}}
                {{else}}
                    {{>molecules/blocks/brand-window-fallback}}
                {{/if}}
            </div> <!-- plan-window-right -->
            <div class="left">
                <div class="text">
                    <div class="title">
                        <header>
                            <h1>{{post_title}} Model</h1>
                        </header>
                        <h3>{{floorplan.type}}</h3>
                        <a class="plan-meta-community-name" href="{{neighborhood.link}}">
                            <h3 class="community-name">{{neighborhood.title}} &raquo;</h3>
                        </a>
                    </div> <!-- plan-meta-top -->
                    <div class="body">
                        {{#if floorplan}}
                            {{#with floorplan}}

                                <ul class="plan-amenities">

                                    {{#if bedrooms_min}}
                                        <li>
                                            <i class="icon icon-beds"></i>
                                            <span>
                                                {{bedrooms_min}}
                                                {{#if bedrooms_max}}
                                                    &ndash; {{bedrooms_max}}
                                                {{/if}}
                                            </span>Bedrooms
                                        </li>
                                    {{/if}}
                                    {{#if bathrooms_min}}
                                        <li>
                                            <i class="icon icon-baths"></i>
                                            <span>
                                                {{bathrooms_min}}
                                                {{#if bathrooms_max}}
                                                    &ndash; {{bathrooms_max}}
                                                {{/if}}
                                            </span>Bathrooms
                                        </li>
                                    {{/if}}
                                    {{#if garage_min}}
                                        <li>
                                            <i class="icon icon-garage"></i>
                                            <span>
                                                {{garage_min}}
                                                {{#if garage_max}}
                                                    &ndash; {{garage_max}}
                                                {{/if}}
                                            </span>Car Garage
                                        </li>
                                    {{/if}}
                                    {{#if finished_sqr_ft}}
                                        <li>
                                            <i class="icon icon-sq-ft-main-floor"></i>Up to &nbsp;
                                            <span> {{finished_sqr_ft}} sq. ft.</span>
                                        </li>
                                    {{/if}}
                                    {{#if main_sqr_ft}}
                                        <li>
                                            <i class="icon icon-sq-ft-total"></i>Starts at &nbsp;
                                            <span> {{main_sqr_ft}} sq. ft</span>
                                            <div class="tooltip icon icon-help" data-tip="Square footage varies based on floorplan options selected."></div>
                                        </li>
                                    {{/if}}

                                    {{#if base_price}}
                                        <li><i class="icon icon-price"></i>Priced From &nbsp;
                                            <span> ${{base_price}}k</span>
                                            <div class="tooltip icon icon-help" data-tip="Final price depends on homesite and options selected."></div>
                                        </li>
                                    {{else}}
                                        <li><i class="icon icon-price"></i> Pricing Coming Soon
                                        </li>
                                    {{/if}}

                                </ul>

                            {{/with}}

                        {{/if}}

                        <a href="#request_info_form" class="button yellow modal-trigger" data-wrapclass="request-info-wrapper" data-width="560">Request Info</a>                    </div> <!-- plan-meta-bottom -->
                    </div>
                </div> <!-- text -->
            </div><!-- plan-window-left -->
        </div> <!-- plan-window-wrapper -->
    </section>
</div>
