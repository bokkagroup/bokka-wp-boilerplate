<div id="{{id}}" class="section brand-window-wide">
    <section>

        <div class="image {{#unless image}}fallback{{/unless}}">
            <figure>
                {{#if image}}
                    {{{images.responsive}}}
                {{else}}
                    <img src="{{images.fallback-full}}"alt=" " />
                {{/if}}
            </figure>
        </div><!--/image-->

        <div class="text {{#if background_color}}with-background{{/if}}">
            <h1>
                {{#if title}}
                    {{title}}
                {{/if}}
                {{#unless title}}
                    {{post_title}}
                {{/unless}}
            </h1><!--/text-->
            <div class="body">
               {{{subtitle}}}
            </div><!--/body-->
        </div><!--/text-->
    </section>
</div><!--/brand-window-->