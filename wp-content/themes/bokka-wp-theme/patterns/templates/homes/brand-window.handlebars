<div class="section qmi detail-brand-window">
    <section>
        <div class="container">
            <div class="right">
                {{#if elevations}}
                    {{>molecules/blocks/elevations-gallery}}
                {{else}}
                    {{>molecules/blocks/brand-window-fallback}}
                {{/if}}
            </div> <!-- plan-window-right -->
            <div class="left">
                <div class="text">
                    <div class="title">
                        <h1 class="plan-meta-name">{{floorplan.post_title}} Home</h1>
                        <h3 class="location">{{post_title}}, {{neighborhood.city}},{{neighborhood.state}}</h3>
                        <h3 class="product-type">{{type}}</h3>

                        <a class="plan-meta-community-name" href="{{neighborhood.link}}">
                            <h3 class="community-name">{{neighborhood.title}} &raquo;</h3>
                        </a>
                    </div> <!-- plan-meta-top -->
                    <div class="body">
                        <ul class="plan-amenities">
                            {{#if bedrooms}}
                                <li>
                                    <i class="icon icon-beds"></i>
                                    <span>
                                        {{bedrooms}}

                                    </span>Bedrooms
                                </li>
                            {{/if}}
                            {{#if bathrooms}}
                                <li>
                                    <i class="icon icon-baths"></i>
                                    <span>
                                        {{bathrooms}}
                                    </span>Baths
                                </li>
                            {{/if}}
                            {{#if garage}}
                                <li>
                                    <i class="icon icon-garage"></i>
                                    <span>
                                        {{garage}}

                                    </span>Car Garage
                                </li>
                            {{/if}}
                            {{#if finished_sqr_ft}}
                                <li>
                                    <i class="icon icon-sq-ft-total"></i>Total &nbsp;
                                    <span>{{finished_sqr_ft}} sq. ft</span>
                                </li>
                            {{/if}}
                            {{#if main_sqr_ft}}
                                <li>
                                    <i class="icon icon-sq-ft-main-floor"></i>Main Floor &nbsp;
                                    <span>{{main_sqr_ft}} sq. ft.</span>
                                </li>
                            {{/if}}
                            {{#if price}}
                                <li><i class="icon icon-price"></i><span>Priced at </span> ${{price}}
                                </li>
                            {{/if}}
                        </ul>
                        {{#if tabs}}
                            <a class="button blue"  href="#tab-gallery">View floorplan</a>
                        {{/if}}
                    </div> <!-- plan-meta-bottom -->
                </div> <!-- plan-meta -->
            </div><!-- plan-window-left -->
        </div> <!-- plan-window-wrapper -->
    </section>
</div>
