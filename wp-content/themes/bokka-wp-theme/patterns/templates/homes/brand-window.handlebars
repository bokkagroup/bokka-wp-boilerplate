<div class="section qmi detail-brand-window">
    <section>
        <div class="container">
            <div class="right">
                {{>molecules/blocks/elevations-gallery}}
            </div> <!-- plan-window-right -->
            <div class="left">
                <div class="text">
                    <div class="title">
                        <h1 class="plan-meta-name">{{post_title}} Home</h1>
                        <h3 class="plan-meta-plan-name">{{type}}</h3>

                        <a class="plan-meta-community-name" href="{{neighborhood.link}}">
                            <h3 class="community-name">{{neighborhood.title}} &raquo;</h3>
                        </a>
                    </div> <!-- plan-meta-top -->
                    <div class="body">
                        <ul class="plan-amenities">
                            {{#if bedrooms}}
                                <li>
                                    <i class="icon icon-beds"></i>
                                    <span>
                                        {{bedrooms}}

                                    </span>Bedrooms
                                </li>
                            {{/if}}
                            {{#if bathrooms}}
                                <li>
                                    <i class="icon icon-baths"></i>
                                    <span>
                                        {{bathrooms}}
                                    </span>Baths
                                </li>
                            {{/if}}
                            {{#if garage}}
                                <li>
                                    <i class="icon icon-garage"></i>
                                    <span>
                                        {{garage}}

                                    </span>Car Garage
                                </li>
                            {{/if}}
                            {{#if finished_sqr_ft}}
                                <li>
                                    <i class="icon icon-sq-ft-total"></i>Starts at
                                    <span>{{finished_sqr_ft}} sq. ft</span>
                                    <div class="tooltip icon icon-help" data-tip="Price does not include land and varies depending on options selected."></div>
                                </li>
                            {{/if}}
                            {{#if main_sqr_ft}}
                                <li>
                                    <i class="icon icon-sq-ft-main-floor"></i>Main Floor
                                    <span>{{main_sqr_ft}} sq. ft.</span>
                                </li>
                            {{/if}}
                            {{#if price}}
                                <li><i class="icon icon-price"></i><span>Priced From </span> ${{price}}
                                    <div class="tooltip icon icon-help" data-tip="Price does not include land and varies depending on options selected."></div>
                                </li>
                            {{/if}}
                        </ul>
                        <a class="button blue"  href="{{floorplan.permalink}}">View floorplan</a>
                    </div> <!-- plan-meta-bottom -->
                </div> <!-- plan-meta -->
            </div><!-- plan-window-left -->
        </div> <!-- plan-window-wrapper -->
    </section>
</div>
